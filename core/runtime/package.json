{
  "name": "@ldc/runtime",
  "version": "0.0.1",
  "description": "LD-C core runtime: evaluator, AST, DAG, diagnostics",
  "license": "MIT",
  "author": "Turtle Labs",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
