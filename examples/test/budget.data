{
  "@context": {
    "ex": "https://example.com/budget/"
  },
  "@id": "ex:monthly-budget",
  "@type": "Budget",

  "income": 5000,
  "rent": 1500,
  "utilities": 200,
  "groceries": 400,
  "transport": 150,
  "entertainment": 200,

  "totalExpenses": {
    "@expr": "rent + utilities + groceries + transport + entertainment"
  },

  "savings": {
    "@expr": "income - totalExpenses"
  },

  "savingsRate": {
    "@expr": "savings / income"
  },

  "savingsRateFormatted": {
    "@expr": "$percent(savingsRate)"
  },

  "status": {
    "@expr": "savingsRate >= 0.20 ? 'healthy' : (savingsRate >= 0.10 ? 'okay' : 'at-risk')"
  },

  "incomeFormatted": {
    "@expr": "$currency(income)"
  },

  "expensesFormatted": {
    "@expr": "$currency(totalExpenses)"
  },

  "savingsFormatted": {
    "@expr": "$currency(savings)"
  },

  "statusMessage": {
    "@expr": "'Your budget is ' + $upper(status) + ' with ' + $percent(savingsRate) + ' savings rate'"
  },

  "expenseBreakdown": {
    "@expr": "{ rent: $currency(rent), utilities: $currency(utilities), groceries: $currency(groceries), transport: $currency(transport), entertainment: $currency(entertainment) }"
  },

  "isHealthy": {
    "@constraint": "savingsRate >= 0.20"
  }
}
